---
import LayoutBare from "./LayoutBare.astro";
import Header from "../components/Header.astro";
const {
    title = "Raphael Reichl",
    description = "Artist and filmmaker Raphael Reichl, based in Vienna / Mexico City.",
    sectionNames,
} = Astro.props;
---

<LayoutBare title={title} description={description}>
    <Header sectionNames={sectionNames} />
    <main class="w-1/2 mt-64 ml-128 mb-64">
        <div
            class="sticky top-0 -mb-4 -mr-12 font-ocr-t text-l text-right text-red"
        >
            <button id="btn-lang-en" class="underline" disabled>en</button>
            &nbsp;/&nbsp;
            <button id="btn-lang-de">de</button>
        </div>
        <slot />
    </main>
</LayoutBare>
